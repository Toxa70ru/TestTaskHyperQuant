<Window x:Class="TestTaskHyperQuant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:TestTaskHyperQuant.ViewModel"
        mc:Ignorable="d"
        Title="Portfolio Viewer" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для кнопки -->
            <RowDefinition Height="*"/>
            <!-- Для DataGrid -->
        </Grid.RowDefinitions>

        <!-- Кнопка для загрузки данных -->
        <Button Content="Load Portfolio" 
                Command="{Binding LoadCommand}" 
                HorizontalAlignment="Left" 
                Width="120" 
                Margin="0,0,0,10"/>

        <!-- Таблица для отображения данных портфеля -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Portfolio}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  CanUserResizeRows="False">
            <DataGrid.Columns>
                <!-- Колонка для валюты -->
                <DataGridTextColumn Header="Currency" 
                                    Binding="{Binding Currency}" 
                                    Width="*"/>
                <!-- Колонка для общей стоимости -->
                <DataGridTextColumn Header="Total Value" 
                                    Binding="{Binding TotalValue}" 
                                    Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
